<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Book</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <main class="main w-full min-h-screen bg-black">
        <form action="/create" method="post" class="form p-10">
            <h1 class="text-center text-white font-bold text-2xl">Task Book</h1>

           
            <input type="text"  placeholder="Write Title" name="title" class="block outline-none w-full rounded-md text-white py-2 px-5 mt-3 bg-zinc-900">

            <textarea name="details" placeholder="Write Details" class="w-full text-white rounded-md resize-none py-2 px-5 mt-3 bg-zinc-900"></textarea>

            <input type="submit" value="Submit" class="w-full py-3 px-2 mt-3 bg-blue-800 text-white rounded-md">
        </form>

        <section class="tasks gap-3 p-10 flex flex-wrap">
            <% if(files.length > 0){ %>
                <% files.forEach((val) => { %>
                    <div class="task min-w-72 px-3 py-4 bg-zinc-900 text-white rounded-md">
                        <h3 class="text-2xl text-center text-white font-bold mt-1"><%= val %></h3>
                        <div class="flex justify-around mt-2 w-full ">
                            <a href="/files/<%= val %>" class="text-xl text-green-500">Read More...</a>
                            <a href="/edit/<%= val %>" class="text-xl text-green-500">Edit</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-center w-full text-white font-bold text-2xl">No Task Available Yet</h3>
            <% } %>
        </section>
    </main>
</body>
</html>
